<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hira Steel Shop", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @*<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                <li><a href="#">Link</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Daily Entry<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Daily Sells Entry", "Create", "DailySellsRecord")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Daily Cash Flow Entry", "Create", "DailyCashFlow")</li>

                            <li role="separator" class="divider"></li>

                        </ul>

                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Customer<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create Customer", "Create", "Customer")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Customer Buying rec Entry", "Create", "CustomerBuyingRec")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Customer Paymentyt Entry", "Create", "CustomerPayment")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Customer Paymentyt Daetails", "Details", "CustomerPayment")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Customer  List", "Index", "Customer")</li>
                            <li role="separator" class="divider"></li>

                        </ul>

                    </li>


                </ul>
            </div><!-- /.navbar-collapse -->
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Dev@Right-Hira</p>
        </footer>
    </div>

 
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
