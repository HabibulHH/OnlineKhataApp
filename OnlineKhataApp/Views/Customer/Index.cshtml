@model IEnumerable<OnlineKhataApp.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table id="Customers" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomernName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountRecivable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomernName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRecivable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @*//@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>

        $(document).ready(function() {


            var table = $("#Customers").DataTable();
            $("#Customers").hide();
               
                $.ajax({
                    type: "POST",
                    url: '/Coustomer/ViewCustomer',
                    @*//url: '@Url.Action("ViewCourseStatistics", "Course")',*@
                    contentType: "application/json; charset=utf-8",
                    success: function(data) {
                        table.clear();
                        $("#Customers").show();

                        $.each(data, function(key, value) {


                            table.row.add([
                                value.Name
                                
                            ]).draw(false);

                        });
                        $("#Customers").DataTable();

                    }
                });

            });


    
    </Script>
}
